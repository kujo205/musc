{
  "name": "yt-music-sharer",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "codegen": "prisma db pull --schema=src/server/db/types/schema.prisma && prisma-case-format --file src/server/db/types/schema.prisma && prisma generate --schema=src/server/db/types/schema.prisma  && prettier --write src/server/db/types/db-types.d.ts src/server/db/types/enums.ts",
    "test:unit": "vitest --coverage",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "make-migration": "bunx kysely migrate:make",
    "migrate": "bunx kysely migrate:latest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@sveltejs/adapter-node": "^5.2.9",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/eslint": "^9.6.0",
    "@vitest/coverage-istanbul": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.7",
    "kysely": "^0.27.4",
    "kysely-ctl": "^0.9.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^5.22.0",
    "prisma-case-format": "1.7.3",
    "prisma-kysely": "^1.8.0",
    "svelte": "5.2.8",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.9",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "better-auth": "^1.0.2",
    "mysql2": "^3.11.4",
    "vite": "5.4.11"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --cache --fix",
    "*.{js,ts,svelte,css,md}": "prettier --write"
  }
}
